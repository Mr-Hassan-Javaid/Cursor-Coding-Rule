mkdir -p src/modules/user/components
import type { User } from "../types";

export function UserCard({ user }: { user: User }) {
  return (
    <div>
      <strong>{user.name}</strong>
      <p>{user.email}</p>
    </div>
  );
}


mkdir -p src/modules/user/hooks
import { useEffect, useState } from 'react';
import { UserService } from '../services/user.service';
import type { User } from '../types';

export function useUser(userId: string) {
  const [data, setData] = useState<User | null>(null);

  useEffect(() => {
    UserService.getUser(userId).then(setData);
  }, [userId]);

  return data;
}


mkdir -p src/modules/user/services
import { UserAPI } from '../api/user.api';
import type { User } from '../types';

export const UserService = {
  async getUser(id: string): Promise<User> {
    const user = await UserAPI.getUser(id);
    return user;
  },
};


mkdir -p src/modules/user/api
import { http } from '@/lib/http';
import type { User } from '../types';

export const UserAPI = {
  async getUser(id: string): Promise<User> {
    return http.get(`/users/${id}`);
  },
};


mkdir -p src/modules/user/utils
import type { User } from "../types";

export function formatUser(user: User): string {
  return `${user.name} <${user.email}>`;
}

export interface User {
  id: string;
  name: string;
  email: string;
}

export * from "./types";
export * from "./components/UserCard";
export * from "./hooks/useUser";
export * from "./services/user.service";


